{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["**/*.{ts,tsx,js,jsx,json,css,md}", "!node_modules/**", "!dist/**", "!.next/**"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^build"],
      "inputs": ["**/*.{ts,tsx,js,jsx}", "!node_modules/**"]
    },
    "type-check": {
      "dependsOn": ["^build"],
      "inputs": ["**/*.{ts,tsx}", "tsconfig.json", "!node_modules/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "start": {
      "dependsOn": ["build"],
      "cache": false,
      "persistent": true
    }
  }
}